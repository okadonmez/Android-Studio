<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#89EC9E">

    <Button
        android:id="@+id/id_btn_renk"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:backgroundTint="#E4F354"
        android:text="Renk Değiştirmek İçin Bas!"
        android:textColor="@color/black"
        app:cornerRadius="50dp"
        app:strokeWidth="2dp">
    </Button>

    <Space
        android:layout_width="50dp"
        android:layout_height="20dp">
    </Space>

    <Button
        android:id="@+id/id_btn_geri"
        android:layout_width="200dp"
        android:layout_height="65dp"
        app:cornerRadius="50dp"
        android:text="Geri"
        android:textColor="@color/black"
        android:backgroundTint="#E4F354"
        app:strokeWidth="2dp">
    </Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/id_cardview_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:background="@drawable/gorsel1"></ImageView>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp">
        </Space>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_cardview_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/gorsel2"></ImageView>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp">
        </Space>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_cardview_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/gorsel3">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>